<div class="container mt-4">
    <h1 class="text-uppercase fw-bold mb-4" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">Admin Dashboard</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="cyber-card p-4 text-center">
                <i class="bi bi-bag-check display-4 mb-3" style="color: var(--hot-pink);"></i>
                <h3>PRODUCTS</h3>
                <p class="text-muted">Manage your cyber collection</p>
                <a asp-action="Products" class="btn btn-cyber w-100">MANAGE PRODUCTS</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="cyber-card p-4 text-center">
                <i class="bi bi-people display-4 mb-3" style="color: var(--hot-pink);"></i>
                <h3>USERS</h3>
                <p class="text-muted">Manage your beauty community</p>
                <a asp-action="Users" class="btn btn-cyber w-100">MANAGE USERS</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="cyber-card p-4 text-center">
                <i class="bi bi-graph-up display-4 mb-3" style="color: var(--hot-pink);"></i>
                <h3>SALES</h3>
                <p class="text-muted">View your empire's growth</p>
                <a asp-action="Sales" class="btn btn-cyber w-100">VIEW ANALYTICS</a>
