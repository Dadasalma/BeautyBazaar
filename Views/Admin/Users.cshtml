@model IEnumerable<BeautyBazaar.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-uppercase fw-bold m-0" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">Manage Users</h1>
        <a asp-action="Index" class="btn btn-cyber-outline btn-sm">BACK TO DASHBOARD</a>
    </div>

    <div class="cyber-card p-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0" style="background: rgba(0,0,0,0.4);">
                <thead style="border-bottom: 2px solid var(--neon-pink);">
                    <tr>
                        <th class="ps-4 py-3">NAME</th>
                        <th class="py-3">EMAIL</th>
                        <th class="py-3">PHONE</th>
                        <th class="py-3">CITY</th>
                        <th class="py-3 text-end pe-4">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3 align-middle">
                                <span class="fw-bold text-white">@user.FirstName @user.LastName</span>
                            </td>
                            <td class="py-3 align-middle">@user.Email</td>
                            <td class="py-3 align-middle">@(user.PhoneNumber ?? "N/A")</td>
                            <td class="py-3 align-middle">@(user.City ?? "N/A")</td>
                            <td class="py-3 text-end pe-4 align-middle">
                                <div class="btn-group">
                                    <button class="btn btn-outline-info btn-sm me-2" disabled><i class="bi bi-eye"></i></button>
                                    <button class="btn btn-outline-danger btn-sm" disabled><i class="bi bi-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-dark {
        --bs-table-bg: transparent;
        --bs-table-hover-bg: rgba(255, 0, 128, 0.1);
        color: #e0e0e0;
    }
    .table > :not(caption) > * > * {
        border-bottom-color: rgba(255, 0, 128, 0.2);
    }
</style>
