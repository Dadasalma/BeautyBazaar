<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-uppercase fw-bold m-0" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">Product Management</h1>
        <a asp-action="Create" class="btn btn-cyber">ADD NEW PRODUCT</a>
    </div>

    <div class="cyber-card p-3">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAME</th>
                        <th>BRAND</th>
                        <th>PRICE</th>
                        <th>STOCK</th>
                        <th>STATUS</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 40px; height: 40px; object-fit: cover; border: 1px solid var(--hot-pink);" class="me-2">
                                    @product.Name
                                </div>
                            </td>
                            <td>@product.Brand</td>
                            <td class="product-price">@product.Price.ToString("N2") DH</td>
                            <td>@product.StockQuantity</td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">ACTIVE</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">INACTIVE</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger ms-2">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-cyber-outline">BACK TO DASHBOARD</a>
    </div>
</div>