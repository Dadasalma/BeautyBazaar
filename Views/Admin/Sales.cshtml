@model IEnumerable<BeautyBazaar.Models.Order>

@{
    ViewData["Title"] = "Sales Analytics";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-uppercase fw-bold m-0" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">Sales Analytics</h1>
        <a asp-action="Index" class="btn btn-cyber-outline btn-sm">BACK TO DASHBOARD</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="cyber-card p-3 text-center">
                <h5 class="text-muted small mb-1">TOTAL ORDERS</h5>
                <h2 class="m-0" style="color: var(--neon-blue);">@Model.Count()</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="cyber-card p-3 text-center">
                <h5 class="text-muted small mb-1">TOTAL SALES</h5>
                <h2 class="m-0" style="color: var(--neon-pink);">@Model.Sum(o => o.Total).ToString("N2") DH</h2>
            </div>
        </div>
    </div>

    <div class="cyber-card p-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0" style="background: rgba(0,0,0,0.4);">
                <thead style="border-bottom: 2px solid var(--neon-pink);">
                    <tr>
                        <th class="ps-4 py-3">ORDER #</th>
                        <th class="py-3">DATE</th>
                        <th class="py-3">CUSTOMER</th>
                        <th class="py-3 text-center">ITEMS</th>
                        <th class="py-3 text-end">TOTAL</th>
                        <th class="py-3 text-center">STATUS</th>
                        <th class="py-3 text-end pe-4">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3 align-middle">
                                <span class="fw-bold" style="color: var(--neon-blue);">@order.OrderNumber</span>
                            </td>
                            <td class="py-3 align-middle text-muted">@order.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td class="py-3 align-middle">@order.FirstName @order.LastName</td>
                            <td class="py-3 align-middle text-center">@order.OrderItems.Sum(i => i.Quantity)</td>
                            <td class="py-3 align-middle text-end fw-bold" style="color: var(--neon-pink);">@order.Total.ToString("N2") DH</td>
                            <td class="py-3 align-middle text-center">
                                <span class="badge @(order.Status == BeautyBazaar.Models.OrderStatus.Pending ? "bg-warning" : "bg-success")">
                                    @order.Status
                                </span>
                            </td>
                            <td class="py-3 text-end pe-4 align-middle">
                                <button class="btn btn-outline-info btn-sm" disabled><i class="bi bi-file-earmark-text"></i></button>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted small italic">
                                No sales recorded yet. Your empire is just beginning!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-dark {
        --bs-table-bg: transparent;
        --bs-table-hover-bg: rgba(255, 0, 128, 0.1);
        color: #e0e0e0;
    }
    .table > :not(caption) > * > * {
        border-bottom-color: rgba(255, 0, 128, 0.2);
    }
</style>
