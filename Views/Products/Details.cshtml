@model BeautyBazaar.Models.Product
@{
    ViewData["Title"] = Model.Name + " - BeautyBazaar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="cyber-card p-3" style="min-height: 400px; display: flex; align-items: center; justify-content: center;">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height: 350px; border: 1px solid var(--hot-pink);">
            </div>
        </div>
        <div class="col-md-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-light">HOME</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")" class="text-light">PRODUCTS</a></li>
                    <li class="breadcrumb-item active text-hot-pink" aria-current="page">@Model.Name.ToUpper()</li>
                </ol>
            </nav>

            <h1 class="text-uppercase fw-bold mb-0" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">@Model.Name</h1>
            <p class="text-muted mb-4">BRAND: @Model.Brand.ToUpper() | CATEGORY: @Model.Category.ToUpper()</p>

            <div class="mb-4">
                <span class="h1 product-price">@Model.Price.ToString("N2") DH</span>
            </div>

            <div class="mb-4">
                @if (Model.StockQuantity > 0)
                {
                    <span class="badge badge-cyber">IN STOCK</span>
                }
                else
                {
                    <span class="badge bg-danger">OUT OF STOCK</span>
                }
            </div>

            <p class="text-light lead mb-5">@Model.Description</p>

            <div class="mt-4">
                @if (Model.StockQuantity > 0)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="row align-items-end">
                            <div class="col-auto">
                                <label for="quantity" class="form-label text-muted small">QUANTITY:</label>
                                <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.StockQuantity" class="form-control cyber-search" style="width: 100px;">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-cyber btn-lg mt-4 w-100">
                            <i class="bi bi-cart-plus me-2"></i> ADD TO CART
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-cyber-outline btn-lg w-100" disabled>OUT OF STOCK</button>
                }
            </div>
        </div>
    </div>
</div>