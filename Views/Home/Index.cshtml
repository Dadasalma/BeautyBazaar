@model List<BeautyBazaar.Models.Product>
@{
    ViewData["Title"] = "BeautyBazaar - Cyber Glam Beauty";
}

<!-- Cyber Hero Section -->
<section class="cyber-hero">
    <div class="container">
        <h1 class="hero-title">CYBER CRAZE 2024</h1>
        <p class="hero-subtitle">Experience the Future of Beauty</p>
        <p class="lead mb-4">Discover revolutionary products with cutting-edge technology and cyber-inspired aesthetics</p>
        <div class="mt-4">
            <a href="@Url.Action("Index", "Products")" class="btn btn-cyber me-3">SHOP NOW</a>
            <a href="#" class="btn btn-cyber-outline">EXPLORE COLLECTION</a>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="text-uppercase fw-bold" style="color: var(--neon-pink); text-shadow: 0 0 20px rgba(255, 0, 255, 0.5);">FEATURED PRODUCTS</h2>
            <p class="text-light">Discover our most popular cyber-glam creations</p>
        </div>

        @if (Model.Any())
        {
            <div class="row">
                @foreach (var product in Model.Take(4))
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 cyber-card">
                            <div style="height: 250px; background: linear-gradient(45deg, #2a2a2a, #1a1a1a); display: flex; align-items: center; justify-content: center; border-bottom: 1px solid var(--hot-pink);">
                                <img src="@product.ImageUrl" alt="@product.Name" style="height: 100%; width: 100%; object-fit: cover;">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-light flex-grow-1 small">@product.Description</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="product-price">@product.Price.ToString("N2") DH</span>
                                        <span class="badge badge-cyber">HOT</span>
                                    </div>
                                    <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-cyber-outline w-100 mt-2">VIEW DETAILS</a>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-2">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-cyber w-100">
                                            <i class="bi bi-cart-plus me-1"></i>ADD TO CART
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Products")" class="btn btn-cyber">VIEW ALL PRODUCTS</a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-grid-3x3-gap display-1" style="color: var(--hot-pink);"></i>
                <h3 class="mt-3 text-light">COMING SOON</h3>
                <p class="text-muted">Our cyber collection is launching soon!</p>
            </div>
        }
    </div>
</section>