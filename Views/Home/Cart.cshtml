@{
    ViewData["Title"] = "Shopping Cart - BeautyBazaar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-uppercase fw-bold" style="color: var(--neon-pink);">Shopping Cart</h1>

            <div class="text-center py-5">
                <i class="bi bi-cart-x display-1" style="color: var(--hot-pink);"></i>
                <h3 class="mt-3 text-light">YOUR CART IS EMPTY</h3>
                <p class="text-muted">Add some cyber glam to your cart!</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-cyber mt-3">
                    <i class="bi bi-bag"></i> CONTINUE SHOPPING
                </a>
            </div>
        </div>
    </div>
</div>