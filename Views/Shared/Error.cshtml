@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="text-danger display-1">Oops!</h1>
            <h2 class="text-danger">An error occurred while processing your request.</h2>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="alert alert-warning mt-4">
                <h4>What could have happened?</h4>
                <ul class="list-unstyled">
                    <li>The page might have been moved or deleted</li>
                    <li>You may have entered an incorrect URL</li>
                    <li>There might be a temporary server issue</li>
                </ul>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                    <i class="bi bi-house"></i> Go Home
                </a>
                <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">
                    <i class="bi bi-bag"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>