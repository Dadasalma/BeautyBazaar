<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeautyBazaar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --hot-pink: #ff0080;
            --neon-pink: #ff00ff;
            --dark-pink: #cc0066;
            --black: #000000;
            --dark-gray: #1a1a1a;
            --cyber-gradient: linear-gradient(135deg, #ff0080 0%, #ff00ff 50%, #cc0066 100%);
            --cyber-glow: 0 0 20px rgba(255, 0, 128, 0.7);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--black);
            color: white;
            line-height: 1.6;
        }

        /* Top Banner */
        .top-banner {
            background: var(--cyber-gradient);
            color: white;
            padding: 8px 0;
            font-size: 0.9rem;
            text-align: center;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        /* Cyber Header */
        .cyber-header {
            background: var(--black);
            border-bottom: 2px solid var(--hot-pink);
            box-shadow: var(--cyber-glow);
        }

        .navbar-brand {
            font-size: 2rem;
            font-weight: 800;
            background: var(--cyber-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: var(--cyber-glow);
            letter-spacing: 2px;
        }

        .nav-link {
            color: white !important;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover {
                color: var(--neon-pink) !important;
                text-shadow: 0 0 10px rgba(255, 0, 255, 0.8);
            }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--cyber-gradient);
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        /* Cyber Hero Section */
        .cyber-hero {
            background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%23ff0080" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            background-size: cover;
            padding: 100px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .cyber-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 0, 128, 0.1), transparent);
                animation: shimmer 3s infinite;
            }

        @@keyframes shimmer {
            0% {
                left: -100%;
            }

            100% {
                left: 100%;
            }
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            background: var(--cyber-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 30px rgba(255, 0, 128, 0.5);
            margin-bottom: 1rem;
            letter-spacing: 3px;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            color: #ccc;
            margin-bottom: 2rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Cyber Buttons */
        .btn-cyber {
            background: var(--cyber-gradient);
            border: none;
            color: white;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            padding: 15px 30px;
            border-radius: 0;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--cyber-glow);
        }

            .btn-cyber:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 30px rgba(255, 0, 128, 0.9);
                color: white;
            }

        .btn-cyber-outline {
            background: transparent;
            border: 2px solid var(--hot-pink);
            color: var(--hot-pink);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            padding: 13px 28px;
            border-radius: 0;
            transition: all 0.3s ease;
        }

            .btn-cyber-outline:hover {
                background: var(--hot-pink);
                color: black;
                box-shadow: var(--cyber-glow);
            }

        /* Cyber Product Cards */
        .cyber-card {
            background: var(--dark-gray);
            border: 1px solid var(--hot-pink);
            border-radius: 0;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .cyber-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: var(--cyber-gradient);
            }

            .cyber-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(255, 0, 128, 0.3);
                border-color: var(--neon-pink);
            }

        .card-title {
            color: white;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .product-price {
            color: var(--neon-pink);
            font-weight: 800;
            font-size: 1.3rem;
            text-shadow: 0 0 10px rgba(255, 0, 255, 0.5);
        }

        .badge-cyber {
            background: var(--cyber-gradient);
            color: white;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Cyber Footer */
        .cyber-footer {
            background: var(--dark-gray);
            border-top: 3px solid var(--hot-pink);
            padding: 40px 0 20px;
            margin-top: 50px;
        }

        .footer-title {
            color: var(--neon-pink);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }

        .cookie-banner {
            background: var(--dark-gray);
            border: 1px solid var(--hot-pink);
            padding: 20px;
            margin-top: 30px;
            position: relative;
        }

            .cookie-banner::before {
                content: '⚠️';
                position: absolute;
                top: -15px;
                left: 20px;
                background: var(--black);
                padding: 0 10px;
                font-size: 1.2rem;
            }

        /* Search Styling */
        .cyber-search {
            background: var(--dark-gray);
            border: 2px solid var(--hot-pink);
            color: white;
            border-radius: 0;
        }

            .cyber-search:focus {
                background: var(--dark-gray);
                border-color: var(--neon-pink);
                box-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
                color: white;
            }

        /* Navigation Categories */
        .nav-categories {
            background: var(--dark-gray);
            border-bottom: 1px solid var(--hot-pink);
            padding: 15px 0;
        }

        .category-link {
            color: #ccc;
            text-decoration: none;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            padding: 5px 15px;
        }

            .category-link:hover {
                color: var(--neon-pink);
                text-shadow: 0 0 10px rgba(255, 0, 255, 0.8);
            }

        .category-badge {
            background: var(--hot-pink);
            color: black;
            font-size: 0.7rem;
            font-weight: 800;
            padding: 2px 8px;
            margin-left: 5px;
            border-radius: 10px;
        }

        /* Demo pages styling */
        .demo-container {
            min-height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Admin link special style */
        .admin-link {
            color: #00ff00 !important;
            font-weight: 800;
        }

            .admin-link:hover {
                color: #00ff00 !important;
                text-shadow: 0 0 10px rgba(0, 255, 0, 0.8);
            }

        /* Dropdown styling for user menu */
        .dropdown-menu {
            background: var(--dark-gray);
            border: 1px solid var(--hot-pink);
            border-radius: 0;
        }

        .dropdown-item {
            color: white !important;
            transition: all 0.3s ease;
        }

            .dropdown-item:hover {
                background: var(--hot-pink);
                color: black !important;
            }
    </style>
</head>
<body>
    <!-- Top Banner -->
    <div class="top-banner">
        ✨ FREE SHIPPING ON ORDERS OVER $50 ✨
    </div>

    <!-- Main Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark cyber-header">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    BEAUTYBAZAAR
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house me-1"></i>HOME
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("New", "Products")">
                                <i class="bi bi-star me-1"></i>NEW
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("BestSellers", "Products")">
                                <i class="bi bi-trophy me-1"></i>BEST SELLERS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Products")">
                                <i class="bi bi-bag me-1"></i>PRODUCTS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Category", "Products", new { category = "Makeup" })">
                                <i class="bi bi-gift me-1"></i>GIFTS & SETS
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="d-flex" method="post" action="@Url.Action("Search", "Products")">
                                <input class="form-control cyber-search me-2" type="search" name="searchTerm" placeholder="SEARCH" style="width: 150px;">
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Wishlist", "Home")">
                                <i class="bi bi-heart me-1"></i>WISHLIST
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Cart")">
                                <i class="bi bi-cart3 me-1"></i>CART
                                @{
                                    var cart = Context.Session.Get<BeautyBazaar.Models.ShoppingCart>("Cart");
                                    var count = cart?.TotalItems ?? 0;
                                }
                                <span class="badge badge-cyber">@count</span>
                            </a>
                        </li>

                        <!-- IDENTITY LINKS - FIXED VERSION -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="bi bi-gear me-1"></i>Account Settings
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Email">
                                            <i class="bi bi-envelope me-1"></i>Email
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                                            <i class="bi bi-key me-1"></i>Password
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item admin-link" href="@Url.Action("Index", "Admin")">
                                                <i class="bi bi-shield-lock me-1"></i>Admin Panel
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                                            <button type="submit" class="btn btn-link p-0 text-decoration-none w-100 text-start">
                                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>LOGIN
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>REGISTER
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Category Navigation -->
    <div class="nav-categories">
        <div class="container">
            <div class="d-flex justify-content-center flex-wrap">
                <a href="@Url.Action("Category", "Products", new { category = "Makeup" })" class="category-link">CYBER CRAZE <span class="category-badge">NEW</span></a>
                <a href="@Url.Action("Category", "Products", new { category = "Parfumes" })" class="category-link">PARFUMES</a>
                <a href="@Url.Action("Category", "Products", new { category = "Makeup" })" class="category-link">WISHFUL</a>

                <a href="@Url.Action("Category", "Products", new { category = "Skincare" })" class="category-link">SKINCARE</a>
                <a href="@Url.Action("Category", "Products", new { category = "Makeup" })" class="category-link">MAKEUP</a>
            </div>
        </div>
    </div>

    <main role="main">
        @RenderBody()
    </main>



    <!-- Footer -->
    <footer class="cyber-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="footer-title">BEAUTYBAZAAR</h5>
                    <p class="text-light small">Your destination for cyber glam beauty and cutting-edge cosmetics.</p>
                </div>
                <div class="col-md-4">
                    <h5 class="footer-title">QUICK LINKS</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none small">Shipping & Returns</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Privacy Policy</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="footer-title">CONTACT</h5>
                    <p class="text-light small mb-1">Email: support@beautybazaar.com</p>
                    <p class="text-light small">Phone: 1-800-BEAUTY</p>
                </div>
            </div>
            <div class="text-center mt-4 pt-3 border-top border-secondary">
                <p class="text-light small mb-0">&copy; 2024 BEAUTYBAZAAR. ALL RIGHTS RESERVED.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>