@model BeautyBazaar.Models.ShoppingCart
@{
    ViewData["Title"] = "Shopping Cart - BeautyBazaar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-uppercase fw-bold mb-4" style="color: var(--neon-pink); text-shadow: var(--cyber-glow);">Shopping Cart</h1>

            @if (!Model.Items.Any())
            {
                <div class="text-center py-5 cyber-card">
                    <i class="bi bi-cart-x display-1" style="color: var(--hot-pink);"></i>
                    <h3 class="mt-3 text-light">YOUR CART IS EMPTY</h3>
                    <p class="text-muted">Add some cyber glam to your cart!</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-cyber mt-3">
                        <i class="bi bi-bag"></i> CONTINUE SHOPPING
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-8">
                        <div class="cyber-card p-3 mb-4">
                            <div class="table-responsive">
                                <table class="table table-dark table-hover align-middle">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover; border: 1px solid var(--hot-pink);" class="me-3">
                                                        <div>
                                                            <div class="fw-bold">@item.ProductName</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="product-price">@item.Price.ToString("N2") DH</td>
                                                <td>
                                                    <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center" style="width: 120px;">
                                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                                        <input type="number" name="quantity" value="@item.Quantity" class="form-control cyber-search form-control-sm" min="1" onchange="this.form.submit()" />
                                                    </form>
                                                </td>
                                                <td class="product-price">@item.Total.ToString("N2") DH</td>
                                                <td>
                                                    <form asp-action="RemoveFromCart" method="post">
                                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                                        <button type="submit" class="btn btn-link text-danger p-0">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="cyber-card p-4">
                            <h4 class="footer-title mb-4">Order Summary</h4>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Subtotal:</span>
                                <span class="product-price">@Model.TotalPrice.ToString("N2") DH</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 text-success">
                                <span>Shipping:</span>
                                <span>FREE</span>
                            </div>
                            <hr style="background-color: var(--hot-pink);">
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="fw-bold">Total:</h5>
                                <h5 class="product-price">@Model.TotalPrice.ToString("N2") DH</h5>
                            </div>
                            <button class="btn btn-cyber w-100 mb-3">
                                PROCEED TO CHECKOUT
                            </button>
                            <a href="@Url.Action("Index", "Products")" class="btn btn-cyber-outline w-100 text-center text-decoration-none">
                                CONTINUE SHOPPING
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
